{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Fanconvo Signup API",
    "description": "API for creating new user accounts on Fanconvo"
  },
  "host": "localhost:9000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/signup": {
      "post": {
        "summary": "Create a new user account",
        "description": "its a sign up api for posting user information",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string"
                },
                "lastName": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "timezone": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful signup",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
